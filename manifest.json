{
	"name": "Mouse gestures",
	"version": "0.6",
	"manifest_version": 2,
	"description": "Mouse gestures for Linux & OSX",

	"icons": { "48": "gestures.png"  },

	"permissions":
	[
		"http://*/*",
		"https://*/*",
		"tabs"
	],

	"content_scripts":
	[ {
		"matches": [ "http://*/*", "https://*/*" ],
		"js": [ "gestures-injected.js" ],
		"run_at": "document_start"
	} ],

	"background": { "scripts": ["gestures-background.js"] }
}